@model PANOPA.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-center">Giriş Yap</h5>
                @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "mt-4" }))
                {
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Username, "Kullanıcı", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, "Şifre", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                }
            </div>
        </div>
    </div>
</div>
